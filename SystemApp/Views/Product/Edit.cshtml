@{
}
@using DataLayer.Models
@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h2 class="text-primary">Edit Product</h2>

    <div class="card shadow-sm p-4">
        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <input type="text" class="form-control" asp-for="ProductName" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Buy Price</label>
                <input type="number" class="form-control" asp-for="buyPrice" required min="0" step="0.001" />
            </div>

            <div class="mb-3">
                <label class="form-label">Sell Price</label>
                <input type="number" class="form-control" asp-for="SellPrice" required min="0" step="0.001" />
            </div>

            <div class="mb-3">
                <label class="form-label">Quantity</label>
                <input type="number" class="form-control" asp-for="Quantity" required min="0" step="0.001" />
            </div>

            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
